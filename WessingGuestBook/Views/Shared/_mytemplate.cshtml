<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/mytemplate/")css/reset.css">
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/mytemplate/")css/grid_24.css">
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/mytemplate/")css/style.css">
    <link rel="stylesheet" type="text/css" media="screen" href="@Url.Content("~/Content/mytemplate/")css/slider.css">
    <link href='http://fonts.googleapis.com/css?family=PT+Sans+Narrow:400,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Great+Vibes' rel='stylesheet' type='text/css'>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery-1.7.min.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/jquery.easing.1.3.js"></script>
    <script src="@Url.Content("~/Content/mytemplate/")js/tms-0.4.1.js"></script>
    <script>
$(document).ready(function(){
	$('.slider')._TMS({
		show:0,
		pauseOnHover:true,
		prevBu:'.prev',
		nextBu:'.next',
		playBu:false,
		duration:800,
		preset:'fade',
		pagination:'.pags',
		pagNums:false,
		slideshow:7000,
		numStatus:false,
		banners:false,
		waitBannerAnimation:false,
		progressBar:false
	})
});
    </script>

</head>
<body>
    <header>
    <h1><a href="index.html"><img src="@Url.Content("~/Content/mytemplate/")images/logo.png" alt=""></a></h1>
    <nav>
        <ul class="menu">        
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("About", "About", "Home")</li>
            <li>@Html.ActionLink("Buku Tamu", "Index", "Rsvp")</li>
            <li>@Html.ActionLink("Tulis Buku Tamu", "Create", "Rsvp")</li>
        </ul>
    </nav>
    </header>
    <div id="slide">
        <div class="slider">
            <ul class="items">
                <li><img src="@Url.Content("~/Content/mytemplate/")images/slide-1.jpg" alt=""></li>
                <li><img src="@Url.Content("~/Content/mytemplate/")images/slide-2.jpg" alt=""></li>
                <li><img src="@Url.Content("~/Content/mytemplate/")images/slide-3.jpg" alt=""></li>
                <li><img src="@Url.Content("~/Content/mytemplate/")images/slide-4.jpg" alt=""></li>
            </ul>
        </div>
        <ul class="pags">
            <li><a href="#"><img src="@Url.Content("~/Content/mytemplate/")images/slide-1-small.jpg" alt=""><span></span></a></li>
            <li><a href="#"><img src="@Url.Content("~/Content/mytemplate/")images/slide-2-small.jpg" alt=""><span></span></a></li>
            <li><a href="#"><img src="@Url.Content("~/Content/mytemplate/")images/slide-3-small.jpg" alt=""><span></span></a></li>
            <li><a href="#"><img src="@Url.Content("~/Content/mytemplate/")mages/slide-4-small.jpg" alt=""><span></span></a></li>
        </ul>
        <a href="#" class="prev">&nbsp;</a><a href="#" class="next">&nbsp;</a>
    </div>   


    <div>
        @RenderBody()
    </div>
</body>
</html>
